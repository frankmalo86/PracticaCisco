<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/espol"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="curso.android.cisco.holamundo.MainActivity"
    android:weightSum="1">

    <TextView
        android:id="@+id/tvMenjase"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/mensaje"
        android:textColor="@color/blanco"
        android:textAlignment="center"
        android:textSize="@dimen/mensaje"

        />

    <View
        android:layout_width="wrap_content"
        android:layout_height="16dp"

        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvUsuario"
        android:textColorHint="@color/blanco"
        android:hint="@string/hint_usuario"
        android:textColor="@color/blanco"

        />


    <View
        android:layout_width="wrap_content"
        android:layout_height="10dp" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvContrasenia"
        android:textColorHint="@color/blanco"
        android:hint="@string/hint_contrasenia"
        android:textColor="@color/blanco"
        android:inputType="textPassword" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_weight="0.89" />

    <Button
        android:id="@+id/btnIngreso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btnIngreso"
        android:onClick="presionar_boton"
        android:layout_below="@+id/tvMenjase" />

</LinearLayout>
